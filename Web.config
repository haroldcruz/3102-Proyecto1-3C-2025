<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- Sitio público, sin sesión ni autenticación -->
    <sessionState mode="Off" />
    <authentication mode="None" />
    <authorization>
      <allow users="*" />
    </authorization>
    <!-- Compilación: usa debug=true en desarrollo; false al publicar -->
    <compilation strict="false" explicit="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1" />
    <!-- WebForms accesible y ligero -->
    <pages enableViewState="false" validateRequest="true" />
  </system.web>
  <!-- Compresión y caché (si IIS Compression está habilitado) -->
  <system.webServer>
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    <!-- Caché para estáticos: CSS/JS/imagenes -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
      <!-- Mimes útiles -->
      <remove fileExtension=".webp" />
      <mimeMap fileExtension=".webp" mimeType="image/webp" />
    </staticContent>
    <!-- Cabeceras de privacidad y seguridad básicas -->
    <httpProtocol>
      <customHeaders>
        <add name="Referrer-Policy" value="no-referrer" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="Permissions-Policy" value="geolocation=(), microphone=(), camera=()" />
      </customHeaders>
    </httpProtocol>
    <!-- Módulos siempre administrados -->
    <modules runAllManagedModulesForAllRequests="true" />
  </system.webServer>
  <!-- Enlaces de ensamblados (mantén los tuyos si los necesitas) -->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Antlr3.Runtime" publicKeyToken="eb42632606e9261f" />
        <bindingRedirect oldVersion="0.0.0.0-3.5.0.2" newVersion="3.5.0.2" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" />
        <bindingRedirect oldVersion="0.0.0.0-11.0.0.0" newVersion="11.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="WebGrease" publicKeyToken="31bf3856ad364e35" />
        <bindingRedirect oldVersion="0.0.0.0-1.6.5135.21930" newVersion="1.6.5135.21930" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
